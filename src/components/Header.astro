---
interface Props {
    currentPath?: string;
}

const { currentPath = "/" } = Astro.props;
---

<nav
    class="container mx-auto px-6 py-8 flex justify-between items-center relative z-10"
>
    <a href="/" class="flex items-center space-x-2">
        <div
            class="w-8 h-8 bg-emerald-500 rounded-lg flex items-center justify-center glow-primary"
        >
            <span class="text-black font-bold">A</span>
        </div>
        <span class="text-xl font-bold tracking-tight">
            Aura<span class="text-emerald-500">Link</span>
        </span>
    </a>

    <div class="hidden md:flex space-x-8 text-sm font-medium text-slate-400">
        <a
            href="/services"
            class:list={[
                "hover:text-emerald-400 transition-colors",
                currentPath === "/services" && "text-emerald-400",
            ]}
        >
            Services
        </a>
        <a
            href="/pricing"
            class:list={[
                "hover:text-emerald-400 transition-colors",
                currentPath === "/pricing" && "text-emerald-400",
            ]}
        >
            Pricing
        </a>
        <a
            href="/about"
            class:list={[
                "hover:text-emerald-400 transition-colors",
                currentPath === "/about" && "text-emerald-400",
            ]}
        >
            About
        </a>
        <a
            href="/blog"
            class:list={[
                "hover:text-emerald-400 transition-colors",
                currentPath === "/blog" && "text-emerald-400",
            ]}
        >
            Intelligence
        </a>
    </div>

    <a
        href="/contact"
        class="bg-emerald-500 hover:bg-emerald-400 text-black px-6 py-2 rounded-full font-bold text-sm transition-all transform hover:scale-105 active:scale-95 glow-primary"
    >
        Request Audit
    </a>
</nav>

<style>
    .glow-primary {
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
    }
</style>
